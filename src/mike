<?php
    class AnagramCheck
    {
        function checkAnagram($input_word, $input_array)
        {
            $input_word_array = str_split($input_word),
            foreach($input_array as $key => $word)
            {
                $array_letters = str_split($word);
            }

            foreach ($input_word_array as $key => $letter)
            {
                if (in_array($letter, $array_letters))
                {
                    array_push($letter[$key])
                }
            }
        }
    }
 ?>
